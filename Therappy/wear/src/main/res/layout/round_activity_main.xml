<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity" android:id="@+id/round_layout" tools:deviceIds="wear_round">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Acceleration (m/s2)"
        android:id="@+id/titleAcceleration"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="15sp"
        android:layout_below="@+id/titleAcceleration"
        android:id="@+id/ax"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:textSize="15sp"
        android:id="@+id/ay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ax"
        />

    <TextView
        android:textSize="15sp"
        android:id="@+id/az"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ay"
        android:layout_alignParentStart="true" />


</RelativeLayout>
