<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/sensorModuleLayout"
    android:orientation="vertical"
    tools:context="ca.utoronto.therappy.SensorModule">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStatusName"
        android:textSize="20sp"
        android:text="@string/status_title"
        android:textColor="#280047"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStatus"
        android:textSize="20sp"
        android:text="updating status..."
        android:textColor="#280047"
        android:layout_alignParentTop="true"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_toEndOf="@+id/tvStatusName" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:text="@string/connect"
        android:id="@+id/wearButton"
        android:layout_gravity="center_horizontal"
        android:background="#280047"
        android:textSize="60sp"
        android:drawableTop="@drawable/ic_connect"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:id="@+id/instruction"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:paddingTop="60dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
